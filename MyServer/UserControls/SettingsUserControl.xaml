<UserControl x:Class="MyServer.UserControls.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyServer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <Button Content="Открыть файл Hosts в блокноте" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="22" Click="OpenHostsFile" Padding="2"/>
            <Button Content="Пересоздать конфигурационные файлы" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="22" Click="GenerateConfigSerives" Padding="2"/>
            <Button Content="Перезапустить службы" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="22" Click="RestartWorkServices"/>
        </StackPanel>
    </Grid>
</UserControl>
