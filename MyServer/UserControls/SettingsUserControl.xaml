<UserControl x:Class="MyServer.UserControls.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyServer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <CheckBox Content="Make changes to the HOSTS file" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top"/>
            <Button Content="Open file HOSTS in notepad" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="22" Click="OpenHostsFile"/>
            <Button Content="Create config files" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="22"/>
            <Button Content="Generate config file for servicecs" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="22" Click="GenerateConfigSerives"/>
            <Button Content="Save" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="22"/>
        </StackPanel>
    </Grid>
</UserControl>
